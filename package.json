{
  "name": "real-time-ai-verification-network",
  "version": "1.0.0",
  "description": "Decentralized Real-Time AI Model Verification Network using Nitrolite SDK and ERC-7824 state channels",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r module-alias/register dist/index.js",
    "dev": "npm run build && npm start",
    "test": "echo 'Yellow Network Integration Tests' && npm run build && node -e 'console.log(\"âœ… Build successful - Ready for Yellow Network testing\")'",
    "test:integration": "npm run build && node dist/index.js --test-mode",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "health": "curl -f http://localhost:3000/health",
    "type-check": "tsc --noEmit",
    "hackathon:demo": "npm run build && TARGET_NETWORK=testnet npm start"
  },
  "keywords": [
    "ai-verification",
    "blockchain",
    "state-channels",
    "nitrolite-sdk",
    "cross-chain",
    "real-time",
    "gasless"
  ],
  "author": "Yellow Network Hackathon Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@erc7824/nitrolite": "^0.3.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/helmet": "^4.0.0",
    "@types/ws": "^8.18.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0",
    "express": "^4.18.0",
    "helmet": "^7.1.0",
    "module-alias": "^2.2.3",
    "winston": "^3.0.0",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": "18.x"
  },
  "_moduleAliases": {
    "@": "./dist",
    "@core": "./dist/core",
    "@network": "./dist/network",
    "@utils": "./dist/utils",
    "@verification": "./dist/verification"
  }
